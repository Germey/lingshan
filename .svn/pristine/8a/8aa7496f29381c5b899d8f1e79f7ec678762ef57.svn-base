@white-a: #FEFEFE;
@black-a: #333;
@theme-green: #00AB36;
@theme-gray: #BFBFBF;
@block-padding: 50px 0;
@bg-color: #E9E8E4;
@carousel-height: 500px;
@border: 1px solid #D7D7D7;
@nav-height: 74px;
.container { 
	padding: 0;
}

a { 
	color: #333; 
}
a:hover, a:focus { 
	color: #E0212A; 
	opacity: 0.9;
	text-decoration: none;
}
.pagination {
	margin: 0;
}
.btn-primary {
  color: #fff;
  background-color: @theme-green;
  border-color: @theme-green;
}
.btn-primary:hover,
.btn-primary:focus,
.btn-primary.focus,
.btn-primary:active,
.btn-primary.active,
.open > .dropdown-toggle.btn-primary {
  color: #fff;
  background-color: #03842B;
  border-color: #03842B;
}
.btn-primary:active,
.btn-primary.active,
.open > .dropdown-toggle.btn-primary {
  background-image: none;
}
hr {
    margin-top: 12px;
    margin-bottom: 12px;
}
.content-detail {
	line-height: 26px;
	// text-indent: 2em;
	img {
		max-width: 1000px;
	}
}

.table.table-noborder>thead>tr>th, 
.table.table-noborder>tbody>tr>th, 
.table.table-noborder>tfoot>tr>th, 
.table.table-noborder>thead>tr>td, 
.table.table-noborder>tbody>tr>td, 
.table.table-noborder>tfoot>tr>td {
	border-top: none; 
	border: none
}

.table.table-dashed>thead>tr>th, 
.table.table-dashed>tbody>tr>th, 
.table.table-dashed>tfoot>tr>th, 
.table.table-dashed>thead>tr>td, 
.table.table-dashed>tbody>tr>td, 
.table.table-dashed>tfoot>tr>td {
	border-top: none; 
	border-bottom: 1px dashed #dddddd;
}

.inner-container {
	background: white;
	padding: 10px 30px;

	.content-block {
		.block {
			background: #f8f8f8;
			border: 1px solid #DDD;
		}
	}
}

.carousel {
	height: @carousel-height;
	.carousel-indicators {
		position: absolute;
		bottom: 15px;
		top: inherit;
		width: inherit;
		z-index: 5;
		margin: 0;
		list-style: none;
	}
	.carousel-inner .item{
		width: 100%;
		height: @carousel-height;
		background-size: cover;
		background-position-x: center;
	}
	.carousel-control {
		margin-top: 0px;
		border:none;
		opacity: 0.5;
		// font-family: "futuraicg";
		background: none;
	}
	a {
		text-align: center;
		width: 50px;
		height: 50px;
		position: absolute;
		top: 48%;
		font-size: 35px;
	}
	.carousel-inner .banner-link {
		position: absolute;
		top: 0;
		width: 100%;
		height: 100%;
	}
	.carousel-indicators li {
		margin-left: 10px;
	}
}

.top {
	@active-color: #00ab36;
	@hover-color: rgba(0, 128, 0, 0.8);
	@nav-a-padding: 27px 20px;
	@down-a-padding: 10px 10px;
	@a-color: #FFF;
	@a-color-gray: #818080;
	@bg-color: rgba(255, 255, 255, 0.85);
	position: relative;
	width: 100%;
	z-index: 10;
	height: 74px;
	background-color: @bg-color;
	.container {
		overflow: hidden;
		width: 1100px;
		.logo{
			float: left;
			padding-top: 20px;
			padding-right: 30px;
			img {
				width: 200px;
				height: 40px;
			}
		}
		.top_nav {
			float: left;
			width: 60%;
			ul.nav {
				margin-bottom: 0px;
				& > li {
					margin-left: 0px;
				}
				& > li > a {
					padding: @nav-a-padding;
					margin: 0;
				}
				& > li:hover > ul.dropdown-menu {
					display: block;
					margin-top: 0px;
				}
				ul.dropdown-menu {
					.borderRadius;
					padding: 0px;
					margin-top: 0px;
					border: none;
					li a {
						// background-color: @active-color;
						padding: @down-a-padding;
						background-image: none;
						// color: @a-color;
						margin: 0;
						border-top: 1px solid #DDD;
					}
					li a:hover {
						background-color: @theme-green;
						color: white;
					}
				}
				& > li:hover > a {
					background-color: @active-color;
					color: @a-color;
				}
				& > li.active a {
					background-color: @active-color;
					color: @a-color;
				}
				a {
					color: @a-color-gray;
					.borderRadius;
				}
			}
		}
	}

}
.search {
	float: right;
	overflow: hidden;
	width: 140px;
	padding: 25px 0;
	.input {
		float: left;
		width: 80%;
		input {
			width: 120%;
			background: none;
			border: 1px solid #B7B7B7;
			padding: 3px;
  			font-size: 8px;
			.borderRadius(5px);
			&:focus {
				border: 1px solid #B7B7B7;
			}
		}
	}
	.bt {
		float: right;
		width: 20%;
		input {
			margin-top: 6px;
			width: 15px;
		}
	}
	
	
}
.about {
	padding: @block-padding;
	border-bottom: 1px solid @theme-gray;
	.content {
		padding: 10px;
		line-height: 26px;
		font-size: 15px;
	}
}

.lingshan {
	padding: @block-padding;
	border-bottom: 1px solid @theme-gray;
	.lingshan-container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
	}
	.content {
		.cat-nav {
			overflow: hidden;
			margin: 10px auto;
			width: 200px;
			& > div {
				float: left;
				padding: 10px 20px;
			}
			.cat-name {
				border: 1px solid @theme-green;
				background-color: @bg-color;
				color: @black-a;
				cursor: pointer;
			}
			.active {
				background-color: @theme-green;
				color: @white-a;
			}
		}
		.summary {
			padding-top: 20px;
			.wrap {
				overflow: hidden;
				.dg-wrapper {
					width:480px;
				}
				.page {
					width: 460px;
					height: 490px;
					text-align: center;
					float: left;
					padding-top: 5px;
					background-color: white;
					color: @black-a;
					margin: 10px;
					text-align: center;
					.borderRadius(4px);
					.title {
						padding: 5px 0;
					}
					.thumb {
						width: 420px;
						margin:10px auto;
					}
					.brief {
						font-size: 15px;
						line-height: 24px;
						padding: 0 30px;
					}
				}
				.dg-center {
					background-color: @theme-green;
					color: @white-a;
					.more {
						a {
							color: @white-a;
							border: 1px solid @white-a;
						}
					}
				}
				.brief {
					margin: 20px 0;
					text-align: left;
				}
			}
			& > div:not(:first-child) {
				display: none;
			}
		}
	}
}
.news {
	padding: @block-padding;
	border-bottom: 1px solid @theme-gray;
}
.content-block {
	a {
		color: @black-a;
		.block {
			width: 330px;
			height: 360px;
			background-color: @white-a;
			margin: 40px auto;
			text-align: center;
			transition:box-shadow 0.2s;
			.thumb {
				width: 100%;
				margin-bottom: 10px;
				img {
					width: 100%;
					height: 190px;
				}
			}
			.title,.date,.brief {
				padding: 5px 20px;
			}
			.title {
				font-size: 15px;
				font-weight: bold;
				color: #555;
				height: auto;
				text-align: left;
			}
			.date {
				text-align: right;
				color: #999;
			}
			.brief {
				height: 80px;
				color: #666;
				text-align: left;
			}
		}
		.block:hover {
		  -moz-box-shadow:2px 2px 5px #666; 
		  -webkit-box-shadow:2px 2px 5px #666; 
		  box-shadow:2px 2px 5px #666;
		  transition:box-shadow 0.2s;
		}
	}
}
.donate {
	padding: @block-padding;
	border-bottom: 1px solid @theme-gray;
	.content {
		margin: 0 auto;
		.item {
			height: 350px;
			width: 345px;
			margin: 0 auto;
			background-image: url("images/wrap-block-bg.png");
			padding-top: 10px;
			.title {
				margin-top: 30px;
			}
		}
