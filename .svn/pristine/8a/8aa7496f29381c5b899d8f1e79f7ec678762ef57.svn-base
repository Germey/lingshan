@media (min-width: 1367px) { 
	.carouselStyle(500px);
	.bannerStyle(400px);
	.inner-container {
		.col-lg-9 {
			width: 70%;
		}
		.col-lg-3 {
			width: 30%;
		}
	}
}

@media (max-width: 1366px) and (min-width: 1200px) {
	.carouselStyle(400px);
	.bannerStyle(300px);
	.inner-container {
		.col-lg-9 {
			width: 70%;
		}
		.col-lg-3 {
			width: 30%;
		}
	}
}
@media (max-width: 1199px) and (min-width: 992px) {
	.carouselStyle(400px);
	.bannerStyle(300px);
	.rightWightStyle-md;
}
@media (max-width: 991px) and (min-width: 900px) {
	.carouselStyle(400px);
	.bannerStyle(300px);
	.rightWightStyle-md;
	.projectStyle;
	.content-block a .block {
		width: 230px;
	}
	.content-block a .block .thumb img {
		height: 160px;
	}
}
@media (max-width: 899px) and (min-width: 768px) {
	.carouselStyle(300px);
	.bannerStyle(260px);
	.topBarStyle;
	.rightWightStyle-md;
	.projectStyle;
	.content-block a .block {
		width: 230px;
	}
	.content-block a .block .thumb img {
		height: 160px;
	}
}
@media (max-width: 767px) {
	.carouselStyle(300px);
	.bannerStyle(260px);
	.topBarStyle;
	.projectStyle;
	.rightWightStyle-sm;
}