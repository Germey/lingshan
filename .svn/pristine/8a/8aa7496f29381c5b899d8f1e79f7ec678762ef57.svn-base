}

.donate-latest-block {
	padding: 5px 15px 0 15px;
	font-size: 13px;

	.scrollup{ height:188px; overflow:hidden; margin-bottom: 10px;}
	.scrollup table{ height:188px; }
	.scrollup table {width:100%; }

	.table tbody + tbody {
		border-top: none;
	}
}

.extra {
	@width: 400px;
	@form-width: 220px;
	@item-padding: 20px 0 0 0;
	padding: @block-padding;
	text-align: center;
	.msg {
		text-align: center;
		font-weight: inherit;
	}
	input.btn {
		height: 40px;
		background-color: @theme-green;
		background-image: none;
		color: @white-a;
		border: none;
		text-shadow: none;
		.leftRightRadius(0px,5px);
	}
	.subscribe {
		padding: @item-padding;
		form {
			width: @form-width;
			margin: 0 auto;
			input[type="text"] {
				height: 40px;
				padding: 0;
				margin: 0;
				border: none;
				padding-left: 10px;
				margin-right: -10px;
				.leftRightRadius(5px,0px);
			}
			input[type="button"] {
				vertical-align: inherit;
			}
			
		}
	}
	.download {
		width: @width;			
		text-align: center;
		padding: @item-padding;
		margin: 0 auto;
		input.btn {
			.leftRightRadius(5px,5px);
		}
	}
}
.navigation {
	@border-green: 1px solid #00AB36;
	@border-white: 1px solid #FFF;
	ul {
		font-size: 15px;
		height: 40px;
		width: 100%;
		border-bottom: @border-green;
		padding-left: 0;
	    margin-bottom: 20px;
		li {
			height: 40px;
			line-height: 40px;
			float: left;
			background: none;
			overflow: hidden;
			position: relative;
			margin-right: 5px;
			a {
				display: block;
				padding: 0 20px;
				outline: none;
